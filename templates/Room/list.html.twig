{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Room List</h1>
        <ul>
            {% for room in rooms %}
                <li>
                    <a href="{{ path('room_show', {'id' : room.id}) }}">
                        #{{ room.id }} - {{ room.type }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}