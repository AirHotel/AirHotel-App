{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="card mt-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-12">Rechercher :</div>
                            <div class="col-12">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input checkFilter" id="smoking">
                                    <label class="custom-control-label" for="smoking">{{ "smoker"|trans }}</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input checkFilter" id="animalAllowed">
                                    <label class="custom-control-label" for="animalAllowed">{{ "animals"|trans }}</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input checkFilter" id="handicappedAccess">
                                    <label class="custom-control-label"
                                           for="handicappedAccess">{{ "handiccaped"|trans }}</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="col-12">Date: {{ "from"|trans }} <input type="text" id="arrivalDate"
                                                                            class="form-control"/> {{ "to"|trans }}
                            <input type="text" id="departureDate" class="form-control"/></div>
                    </div>
                </div>
            </div>
        </div>

        {% for room in rooms %}
            <div data-smoking="{{ room.smokingAllowed }}"
                 data-animalAllowed="{{ room.animalAllowed }}"
                 data-handicappedAccess="{{ room.handicappedAccess }}"
                 class="card mt-3 room">
                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <img src="/images/{{ room.roomtype.name }}-room.jpg" alt="Chambre simple" class="img-fluid" />
                        </div>
                        <div class="col-lg-8 col-6">
                            <h2>{{ "room"|trans }} {{ room.id }}</h2>
                            {% if room.smokingAllowed %}
                                <i class="fas fa-smoking"></i>
                            {% endif %}
                            {% if room.animalAllowed %}
                                <i class="fas fa-paw"></i>
                            {% endif %}
                            {% if room.handicappedAccess %}
                                <i class="fas fa-wheelchair"></i>
                            {% endif %}
                        </div>
                        <div class="col-lg-2 col-4">
                            <h3>{{ room.roomtype.price }} €</h3>
                            <a class="btn btn-success btn-block badge-pill" href="{{ path('room_show', {'id' : room.id}) }}">Voir / Réserver</a>
                        </div>
                    </div>

                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#arrivalDate, #departureDate").datepicker({
                format: "dd/mm/yyyy"
            });

            $('#arrivalDate').datepicker()
                .on("changeDate", function (e) {
                    console.log(e.date);
                    $("#departureDate").datepicker('setStartDate', e.date);
                });
            $('#arrivalDate').datepicker('setStartDate', new Date());

            $('#departureDate').datepicker()
                .on("changeDate", function (e) {
                    $("#arrivalDate").datepicker('setEndDate', e.date);
                });

            $("input[type='checkbox']").on("change", function() {
                var filter = [];
                $("input[type='checkbox']").each(function(i, item) {
                    if($(this).is(":checked")) {
                        filter.push($(this).attr("id"));
                    }
                })
                /*$(".checkFilter").each(function(i, item) {
                    var id = $(this).attr("id");
                })*/
                $(".room").slideDown();

                $(".room").each(function(j,jitem) {
                    var display = true;
                    var $this = $(this);
                    $.each(filter, function(i, item) {
                        console.log($this);
                        if($this.attr("data-" + item) != "1") {
                            display = false;
                        }
                    });
                    if(!display) {
                        $this.slideUp();
                    }
                })


            })
        })
    </script>
{% endblock %}