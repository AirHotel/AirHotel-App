{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid" id="img-accueil"></div>

    <div class="container mt-3">
        <div class="row align-items-center">
            <div class="col-sm text-center">
                <h1>{{ 'myTicket'|trans }}</h1>
            </div>
            <form method="POST" action="{{ path('ticket_submit!') }}">
                <div class="col-sm">
                    <input type="text" class="form-control" name="ticket" id="nbBillet" placeholder="{{ 'nbTicket'|trans }}">
                </div>

                <div class="col-sm text-center">
                    <button style="margin: 10px" type="submit" class="btn btn-primary">{{ 'submit'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}